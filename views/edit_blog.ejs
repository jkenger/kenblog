<%-include('./partials/nav')%>
<main class=" border-y-[1px]  border-secondary-100">
    <div class="container items-start">
        <section>
            <label class=" text-3xl">
                Update Blog
            </label>
            <!-- BLOG HERE -->
            <div class="container">
                <form class="flex flex-col" method="POST" action="/theblog/<%=blogs._id%>">
                    <input type="text"name="id" required="required" hidden value="<%=blogs._id%>">
                    <label>First Name:</label>
                    <input type="text" placeholder="First Name" name="first_name" required="required" value="<%=blogs.first_name%>">

                    <label>Last Name:</label>
                    <input type="text" placeholder="Last name" name="last_name" required="required" value="<%=blogs.last_name%>">

                    <label>Title: </label>
                    <input type="text" placeholder="Title" name="title" required="required" value="<%=blogs.title%>">
                    
                    <label>Description:</label>
                    <textarea name="description" id="" cols="30" rows="2"><%=blogs.description%></textarea>

                    <label>Blog:</label>
                    <textarea name="blog" id="" cols="30" rows="10"><%=blogs.blog%></textarea>

                    <label>Genre:</label>
                    <select name="genre" id="" class="mb-5">
                        <option value="Gaming" <%=(blogs.genre === 'Gaming' ? 'selected' : '')%>>Gaming</option>
                        <option value="Blockchain" <%=(blogs.genre === 'Blockchain' ? 'selected' : '')%>>Blockchain</option>
                        <option value="Web Development" <%=(blogs.genre === 'Web Development' ? 'selected' : '')%>>Web Development</option>
                      </select>

                    <button id="button" class="p-3" type="submit"> Update </button>

                </form>
            </div>
    </div>
</main>
<%-include('./partials/footer')%> 